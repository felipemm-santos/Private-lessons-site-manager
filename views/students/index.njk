{% extends "layout.njk" %}

{% block styles %}
    <link rel="stylesheet" href="/styles/students.css"/>
{% endblock styles %}

{% block content %}
    <div class="card table-container">
        <table width="100%">
            <thead>
                <tr>
                    <th>
                        Nome completo
                    </th>
                    <th>
                        Acompanhamento
                    </th>
                    <th>
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{student.avatar_url}})"></span>
                            {{student.name}}
                        </td>
                        <td>
                            {% for subject in student.subjects %}
                                <span>
                                    {{subject}}
                                </span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="/students/{{student.id}}">
                                ver
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}