{% extends "layout.njk" %}

{% block styles %}{% endblock styles %}

{% block content %}
    <div class="card table-container">
        <div>
            <a href="/teachers/create">Novo Professor</a>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>
                        Nome completo
                    </th>
                    <th>
                        Acompanhamento
                    </th>
                    <th>
                        Ação
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                    <tr>
                        <td>
                            <span style="background-image: url({{teacher.avatar_url}})"></span>
                            {{teacher.name}}
                        </td>
                        <td>
                            {% for subject in teacher.subjects %}
                                <span>
                                    {{subject}}
                                </span>
                            {% endfor %}
                        </td>
                        <td>
                            <a href="/teachers/{{teacher.id}}">
                                ver
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}