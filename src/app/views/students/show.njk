{% extends "layout.njk" %}

{% block styles %}    
{% endblock styles %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url('{{student.avatar_url}}') no-repeat center center / cover;"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome</div>
                <div>{{student.name}}</div>
            </div>
            <div class="item">
                <div>Email</div>
                <div>{{student.email}}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{student.age}} anos</div>
            </div>        
            <div class="item">
                <div>Ano escolar</div>
                <div>{{student.school_year}}</div>
            </div>  

            <div class="item">
                <div>Carga hor√°ria semanal</div>
                <div>{{student.study_hours}} horas</div>
            </div>  

            <div class="buttons">
                <a class="button" href="/students/{{student.id}}/edit">
                    Editar
                </a>
                <form id="form-delete" action="/students?_method=DELETE" method="post">
                    <button type="submit">Deletar</button>
                    <input type="hidden" name="id" value="{{student.id}}">
                </form>
            </div>
        </section>
    </div>
{% endblock content %}

{% block scripts %}
    <script src="/scripts/delete-form.js"></script>
{% endblock scripts %}